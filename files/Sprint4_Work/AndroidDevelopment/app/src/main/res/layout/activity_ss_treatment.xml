<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/textViewTreatmentHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Treatment"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <EditText
        android:id="@+id/editTextEnterTreatment"
        android:layout_width="359dp"
        android:layout_height="400dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Prescribe treatment for the patient..."
        android:inputType="textMultiLine"
        android:paddingLeft="10dp"
        android:paddingTop="50dp"
        android:paddingRight="10dp"
        android:paddingBottom="50dp"
        android:textColor="@color/white"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewTreatmentHeading"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/textViewTreatmentHeading"
        app:layout_constraintTop_toBottomOf="@+id/textViewTreatmentHeading"
        app:layout_constraintVertical_bias="0.149" />

    <Button
        android:id="@+id/btnGoToSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Summary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextEnterTreatment"
        app:layout_constraintStart_toStartOf="@+id/editTextEnterTreatment"
        app:layout_constraintTop_toBottomOf="@+id/editTextEnterTreatment" />

</androidx.constraintlayout.widget.ConstraintLayout>